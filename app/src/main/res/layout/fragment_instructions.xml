<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:background="#CEEFFD"
            android:text="Instructions"
            android:textAlignment="center"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/textView_insText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_text"
            android:text="@string/instructions_text"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_enterStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Enter the store >>"
            android:textSize="24sp" />

        <!--Simple Linear layout has only 2 textview & a button and no change in dimensions expected-->

    </LinearLayout>

</FrameLayout>