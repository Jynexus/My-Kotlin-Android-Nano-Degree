<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="newModel"
            type="com.example.mystore.NewItem" />
    </data>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter New Item Name"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:text="@={newModel.name}" />

        <TextView
            android:id="@+id/textView_itemCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_itemCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter New Item Company"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:text="@={newModel.company}"/>

        <TextView
            android:id="@+id/textView_itemSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_itemSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter New Item Size"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:text="@={newModel.size}"/>

        <TextView
            android:id="@+id/textView_itemColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_itemColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter New Item Color"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:text="@={newModel.color}"/>

        <TextView
            android:id="@+id/textView_itemType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_itemType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter New Item Type"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:text="@={newModel.type}"/>

        <Button
            android:id="@+id/button_Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add" />

        <Button
            android:id="@+id/button_Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <!--Simple Linear layout has fixed number of textviews & edittexts & buttons and no change in dimensions & ratio expected-->
    </LinearLayout>
</FrameLayout>
</layout>
